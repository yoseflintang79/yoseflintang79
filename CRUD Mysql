    private void getData() {
        try{
            connection conn = koneksi.getKoneksi();
            Statment stm = conn.crateStatment();
            ResultSet result = stm.executeQuery("select * from nama");
                    
            DefaultTableModel model = (DefaultTableModel) jTable.getModel();
            
            while(result.next()) {
                String id = result.getString("id");
                String Nama = result.getString("Nama");
                String NIM = result.getString("NIM");
                String Semester = result.getString("Semester");
                String Fakultas = result.getString("Fakultas");
                String Prodi = result.getString("Prodi");
            }
        }
    }

