    private void jTextField1ActionPerformed(java.awt.event.ActionEvent evt) {                                            
        if(databaru) {
          try {
            String sql ="INSERT INTO nama VALUE (%s, 5s, %s, %s, %s, %s)" ;
            
            sql = String.Format(
                       sql,
                       jTextField1.getText(),
                       jTextField2.getText(),
                       jTextField3.getText(),
                       jTextField4.getText(),
                       jTextField5.getText(),
                       jTextField6.getText(),
            
            );
            
            Connection conn = koneksi.getKoneksi();
            PreparedStatement pst = conn.prepareStatement(sql);
            
            pst.execute();
        }
    }                                           

    private void jTextField2ActionPerformed(java.awt.event.ActionEvent evt) {                                            
       try {
            String sql ="UPDATE nama SET Nama= '%s', NIM= '%s', Semester= '%s', Fakultas= '%s', Prodi= '%s' THEREE id='%s'";
            
            sql = String.Format(
                       sql,
                       jTextField1.getText(),
                       jTextField2.getText(),
                       jTextField3.getText(),
                       jTextField4.getText(),
                       jTextField5.getText(),
                       jTextField6.getText(),
            
            );
            
            Connection conn = koneksi.getKoneksi();
            PreparedStatement pst = conn.prepareStatement(sql);
            
            pst.execute();
        }
    }                                           

